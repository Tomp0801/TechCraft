<UserControl x:Class="TechCraftView.view.VItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TechCraftView.view"
             mc:Ignorable="d" 
             d:DesignHeight="60" d:DesignWidth="180">
    <StackPanel x:Name="root" MouseDown="TextBlock_MouseDown" MouseEnter="TextBlock_MouseEnter" Margin="1" MouseLeave="TextBlock_MouseLeave" Background="LightGray">
        <TextBlock x:Name="textBlock" Margin="5" FontSize="16">
        </TextBlock>
    </StackPanel>
</UserControl>
